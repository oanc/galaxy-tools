<tool id="gate.splitter_2.0.0" name="GATE SentenceSplitter v2.0.0" version="2.0.0">
	<description>
		GATE Sentence Splitter
	</description>
	<command interpreter="lsd">
		invoke.lsd gate.splitter_2.0.0 $input $username $password $output
	</command>
	<inputs>
		<param name="input" type="data" format="gate" label="input"/>
		<param name="username" type="text" value="tester" label="Username"/>
		<param name="password" type="text" value="tester" label="Password"/>
	</inputs>
	<outputs>
		<data name="output" format="gate" label="Sentences (GATE)"/>
	</outputs>
	<help>
		GATE Sentence Splitter
	</help>
</tool>
