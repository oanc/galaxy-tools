<tool id='lapps.tools.filter' name='Filter Annotations' version='1.0.0'>
  <description>Renames annotations</description>
  <command interpreter='lsd'>filter.lsd $input $output $cond $pretty</command>
  <inputs>
    <param name='input' type='data' format='lif' label='Input' />
    <param name="cond" type="text" size="5x40" area="true" label="Condition"/>
    <param name="pretty" type="boolean" label="Pretty print result"/>
  </inputs>
  <outputs>
    <data name='output' format='lif'/>
  </outputs>
  <help>Renames the annotations in the last view in the document.
  </help>
</tool>